<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" 
	"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
    <field name="inviteMailFrom">
        <field-validator type="requiredstring" short-circuit="true">
			<param name="trim">true</param>
        	<message>紹介者のメールアドレスを入力してください。</message>
        </field-validator>
        <field-validator type="email" short-circuit="true">
        	<message>紹介者のメールアドレスが不正です。</message>
        </field-validator>
    </field>
    <field name="inviteMailTo">
        <field-validator type="requiredstring" short-circuit="true">
			<param name="trim">true</param>
        	<message>友達のメールアドレスを入力してください。</message>
        </field-validator>
        <!-- 
        <field-validator type="email" short-circuit="true">
        	<message>友達のメールアドレスが不正です。</message>
        </field-validator> 
        -->
    </field>
    <field name="titleId">
        <field-validator type="fieldexpression">
        	<param name="expression"><![CDATA[(questionCd > 0)]]></param>
        	<message>紹介するゲームを入力してください。</message>
        </field-validator>
    </field>
    <field name="inviteMsg">
        <field-validator type="requiredstring" short-circuit="true">
			<param name="trim">true</param>
        	<message>招待メッセージを入力してください。</message>
        </field-validator>
    </field>
</validators>