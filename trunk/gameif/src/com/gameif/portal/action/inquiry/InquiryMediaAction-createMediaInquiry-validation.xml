<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" 
	"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
    <field name="companyName">
        <field-validator type="requiredstring" short-circuit="true">
			<param name="trim">true</param>
        	<message>御社名を入力してください。</message>
        </field-validator>
    </field>
    <field name="companyMediaName">
        <field-validator type="requiredstring" short-circuit="true">
			<param name="trim">true</param>
        	<message>御社媒体名を入力してください。</message>
        </field-validator>
    </field>
    <field name="companyUserName">
        <field-validator type="requiredstring" short-circuit="true">
			<param name="trim">true</param>
        	<message>担当者名を入力してください。</message>
        </field-validator>
    </field>
    <field name="userMailadd">
        <field-validator type="requiredstring" short-circuit="true">
			<param name="trim">true</param>
        	<message>メールアドレスを入力してください。</message>
        </field-validator>
        <field-validator type="email" short-circuit="true">
        	<message>メールアドレスが不正です。</message>
        </field-validator>
    </field>
    <field name="telNum">
        <field-validator type="fieldexpression">
        	<param name="expression"><![CDATA[[0-9]{11}]]></param>
        	<message>対象タイトルを入力してください。</message>
        </field-validator>
    </field>
    <field name="inquiryObject">
        <field-validator type="requiredstring" short-circuit="true">
			<param name="trim">true</param>
        	<message>お問合せ件名を入力してください。</message>
        </field-validator>
    </field>
    <field name="inquiryContents">
        <field-validator type="requiredstring" short-circuit="true">
			<param name="trim">true</param>
        	<message>内容を入力してください。</message>
        </field-validator>
        <field-validator type="regex" short-circuit="true">
        	<param name="expression"><![CDATA[([a-zA-Z0-9｡-ﾟぁ-ゞァ-ヶ一-龠Ａ-Ｚａ-ｚ]+)]]></param>
        	<message>内容に記号或いはスペースが含まれています。</message>
        </field-validator>
    </field>
</validators>