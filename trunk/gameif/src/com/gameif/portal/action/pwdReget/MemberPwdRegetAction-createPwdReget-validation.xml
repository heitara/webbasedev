<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" 
	"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
    <field name="mailPc">
        <field-validator type="requiredstring" short-circuit="true">
			<param name="trim">true</param>
        	<message><![CDATA[<br/>メールアドレスを入力してください。]]></message>
        </field-validator>
        <field-validator type="email" short-circuit="true">
        	<message><![CDATA[<br/>メールアドレスが不正です。]]></message>
        </field-validator>
    </field>
    <field name="questionCd">
        <field-validator type="fieldexpression">
        	<param name="expression"><![CDATA[(questionCd > 0)]]></param>
        	<message><![CDATA[<br/>秘密質問を選択してください。]]></message>
        </field-validator>
    </field>
    <field name="answer">
        <field-validator type="requiredstring">
			<param name="trim">true</param>
        	<message><![CDATA[<br/>秘密質問の答えを入力してください。]]></message>
        </field-validator>
    </field>
</validators>