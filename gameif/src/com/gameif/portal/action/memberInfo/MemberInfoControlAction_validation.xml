<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" 
	"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
    <field name="memId">
        <field-validator type="requiredstring" short-circuit="true">
        	<message>${getText("memId.required")}</message>
        </field-validator>
        <field-validator type="stringlength">
        	<param name="minlength">6</param>
        	<param name="maxlength">20</param>
        	<message>${getText("memId.length")}</message>
        </field-validator>
        <field-validator type="regex">
        	<param name="expression"><![CDATA[(\W{6,20})]]></param>
        	<message>${getText("memId.regex")}</message>
        </field-validator>
    </field>
    <field name="memPwd">
        <field-validator type="requiredstring" short-circuit="true">
        	<message>${getText("memPwd.required")}</message>
        </field-validator>
        <field-validator type="stringlength">
        	<param name="minlength">6</param>
        	<param name="maxlength">20</param>
        	<message>${getText("memPwd.length")}</message>
        </field-validator>
        <field-validator type="regex">
        	<param name="expression"><![CDATA[(\W{6,20})]]></param>
        	<message>${getText("memPwd.regex")}</message>
        </field-validator>
    </field>
    <field name="confirmPwd">
        <field-validator type="requiredstring" short-circuit="true">
        	<message>${getText("confirmPwd.required")}</message>
        </field-validator>
        <field-validator type="stringlength">
        	<param name="minlength">6</param>
        	<param name="maxlength">20</param>
        	<message>${getText("confirmPwd.length")}</message>
        </field-validator>
        <field-validator type="regex">
        	<param name="expression"><![CDATA[(\W{6,20})]]></param>
        	<message>${getText("memPwd.regex")}</message>
        </field-validator>
        <field-validator type="fieldexpression">
        	<param name="expression"><![CDATA[(confirmPwd=memPwd)]]></param>
        	<message>${getText("memPwd.filedexp")}</message>
        </field-validator>
    </field>
    <field name="nickName">
        <field-validator type="requiredstring" short-circuit="true">
        	<message>${getText("nickName.required")}</message>
        </field-validator>
    </field>
    <field name="mailPc">
        <field-validator type="requiredstring" short-circuit="true">
        	<message>${getText("mailPc.required")}</message>
        </field-validator>
        <field-validator type="email">
        	<message>${getText("mailPc.email")}</message>
        </field-validator>
    </field>
    <field name="questionCd">
        <field-validator type="requiredstring" short-circuit="true">
        	<message>${getText("questionCd.required")}</message>
        </field-validator>
    </field>
    <field name="answer">
        <field-validator type="requiredstring" short-circuit="true">
        	<message>${getText("answer.required")}</message>
        </field-validator>
    </field>
    <field name="kaptcha">
        <field-validator type="requiredstring" short-circuit="true">
        	<message>${getText("kaptcha.required")}</message>
        </field-validator>
    </field>
    <field name="agreement">
        <field-validator type="requiredstring" short-circuit="true">
        	<message>${getText("agreement.required")}</message>
        </field-validator>
    </field>
</validators>